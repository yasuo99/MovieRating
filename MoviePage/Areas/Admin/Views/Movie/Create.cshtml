@model Movie
<br />
<div class="container-fluid">
    <h2 class="text-info">Add Movie</h2>
    <div class="border">
        <div asp-validation-summary="ModelOnly"></div>
        <form method="post">
            <div class="form-group row">
                <div class="col-2 offset-1">
                    <label asp-for="@Model.Title"></label>
                </div>
                <div class="col-6">
                    <input type="text" asp-for="@Model.Title" value="" class="form-control" />
                </div>
                <span asp-validation-for="@Model.Title" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2 offset-1">
                    <label asp-for="@Model.Duration"></label>
                </div>
                <div class="col-6">
                    <input type="number" asp-for="@Model.Duration" value="" class="form-control" />
                </div>
                <span asp-validation-for="@Model.Duration" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2 offset-1">
                    <label asp-for="@Model.Description"></label>
                </div>
                <div class="col-6">
                    <input type="text" asp-for="@Model.Description" value="" class="form-control" />
                </div>
                <span asp-validation-for="@Model.Description" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2 offset-1">
                    <label asp-for="@Model.Budget"></label>
                </div>
                <div class="col-6">
                    <input type="number" asp-for="@Model.Budget" value="" class="form-control" />
                </div>
                <span asp-validation-for="@Model.Budget" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2 offset-1">
                    <label asp-for="@Model.Title"></label>
                </div>
                <div class="col-6">
                    <input type="text" asp-for="@Model.Title" value="" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3 offset-3">
                    <input type="submit" class="btn btn-primary form-control" value="Create" />
                </div>
                <div class="col-3">
                    <a asp-area="Admin" asp-action="Index" asp-controller="Movie" class="btn btn-secondary form-control">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts{
    <partial name="~/Views/Shared/_ValidationScriptsPartial.cshtml" />
}