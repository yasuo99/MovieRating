@page
@model MoviePage.Areas.Identity.Pages.Account.LoginModel
@{
}
<br />
<div class="container mt-4">
    <div class="border p-2">
        <h3 class="text-info text-center">Login</h3>
        <form method="post">
            <div class="form-group row">
                <div class="col-1 offset-2">
                    <label asp-for="@Model.Username"></label>
                </div>
                <div class="col-6">
                    <input type="text" value="" class="form-control" asp-for="@Model.Username" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-1 offset-2">
                    <label asp-for="@Model.Password"></label>
                </div>
                <div class="col-6">
                    <input type="password" value="" class="form-control" asp-for="@Model.Password" />
                </div>
            </div>
            <div class="form-group d-flex justify-content-center">
                <div class="mr-3">
                    <label asp-for="@Model.Remember"></label>
                </div>
                <div class="ml-2">
                    <input type="checkbox" class="form-check-input" name="name" value="" asp-for="@Model.Remember" />
                </div>
            </div>
            
            <div class="d-flex justify-content-center">
                <input type="submit" class="btn btn-primary" value="Login" />
            </div>
        </form>
        <div class="form-group d-flex justify-content-between">
            <div>
                <a asp-area="Customer" asp-controller="Home" asp-action="Index" class="text-decoration-none">Home</a>
            </div>
            <div>
                <a asp-area="Identity" asp-page="Register" class="text-decoration-none">Sign up</a>
            </div>
        </div>
    </div>
</div>